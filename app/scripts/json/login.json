{
  "header": "Welcome to login",
  "subTitle": [
    "Please sign in page"
  ],
  "children": [
    {
      "tpl": "view/box",
      "header": "Login form",
      "children": [
        {
          "tpl": "input/text",
          "label": "First Name",
          "name": "login.form.username",
          "validate": {
            "required": true
          }
        },
        {
          "tpl": "input/text",
          "label": "Password",
          "type": "password",
          "name": "login.form.password",
          "validate": {
            "required": true
          }
        }
      ]
    },
    {
      "tpl": "view/box",
      "header": "Form actions",
      "children": [
        {
          "tpl": "button/buttons",
          "list": [
            {
              "label": "Login",
              "value": "login"
            }
          ]
        }
      ]
    }
  ]
}
